<%- include('../includes/header') %>

<h1><%= editing ? "Edit Product" : "Add New Product" %></h1>

<form 
  action="<%= editing ? '/edit-product' : '/add-product' %>" 
  method="POST" 
  class="form"
>
  <% if (editing) { %>
    <!-- Sakriven ID polje ako je edit -->
    <input type="hidden" name="productId" value="<%= product._id %>">
  <% } %>

  <div class="form-control">
    <label for="title">Product Title</label>
    <input 
      type="text" 
      id="title" 
      name="title" 
      value="<%= editing ? product.title : '' %>" 
      required
    >
  </div>

  <div class="form-control">
    <label for="price">Price</label>
    <input 
      type="number" 
      id="price" 
      name="price" 
      value="<%= editing ? product.price : '' %>" 
      required
    >
  </div>

  <div class="form-control">
    <label for="description">Description</label>
    <textarea 
      id="description" 
      name="description" 
      rows="3"
    ><%= editing ? product.description : '' %></textarea>
  </div>

  <button type="submit" class="btn">
    <%= editing ? "Update Product" : "Add Product" %>
  </button>
</form>

<%- include('../includes/footer') %>
