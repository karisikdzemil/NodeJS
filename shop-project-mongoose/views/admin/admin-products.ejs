    <%-include('../includes/header') -%>

    <main class="container">
        <h1 class="h1-style">Admin products</h1>
          <ul class="product_list">
            <%for(prod of prods){%>
                <li class="product">
                    <h3><%=prod.title%></h3>
                    <h4><%=prod.price%>$</h4>
                    <p><%=prod.description%></p>
                    <div>
                        <a href="/edit-product/<%=prod._id%>" type="submit">Edit</a>
                    <form action="/delete-product" method="post">
                        <input type="hidden" name="productId" value="<%=prod._id%>">
                        <button type="submit" class="delete_btn">Delete</button>
                    </form>
                    </div>
                </li>
            <%}%>
        </ul>
    </main>

    <%-include('../includes/footer') -%>