    <%-include('../includes/header') -%>

    <main class="container">
            <h1 class="h1-style">Edit Product</h1>
            <form class="add_product_form" action="/edit-product" method="post">
                <input type="hidden" name="productId" value="<%=prod._id%>" id="">
                <input placeholder="Title" type="text" name="title" value="<%=prod.title%>" id="">
                <input placeholder="Price" type="number" name="price" value="<%=prod.price%>" id="">
                <textarea placeholder="Description" name="description" id=""><%=prod.description%></textarea> 
                <button type="submit">Save</button>
            </form>
    </main>

